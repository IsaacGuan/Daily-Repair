<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorPrimary">@color/blue_light</item>
        <item name="android:colorPrimaryDark">@color/blue_dark</item>
        <item name="android:colorAccent">@color/blue_light</item>
        
    </style>
    
    <style name="WelcomeTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/blue_light</item>
        <item name="android:colorPrimaryDark">@color/blue_light</item>
        <item name="android:colorAccent">@color/blue_light</item>
    </style>

</resources>