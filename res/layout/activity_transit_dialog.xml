<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/space_middle"
    android:paddingBottom="@dimen/space_middle"
    android:paddingLeft="@dimen/space_middle"
    android:paddingRight="@dimen/space_large"
    android:background="@color/white" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已生成多条路线，请选择"
        android:textColor="@color/blue_light"
        android:paddingLeft="@dimen/space_middle"
        android:paddingRight="@dimen/space_large"
        android:textSize="@dimen/text_size_large" />
    
    <ListView
        android:id="@+id/transitList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/space_middle"
        android:paddingRight="@dimen/space_middle"
        android:divider="@color/blue_light"
        android:dividerHeight="@dimen/space_micro" >
        
    </ListView>

</LinearLayout>