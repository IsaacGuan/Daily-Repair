<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    tools:context="${relativePackage}.${activityClass}" >
    
    <ScrollView
        android:id="@+id/sv_modifypassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_modifypassword" >
        
        <RelativeLayout
            android:id="@+id/rl_modifypassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <RelativeLayout
                android:id="@+id/rl_formerpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_middle"
                android:paddingBottom="@dimen/space_small"
                android:paddingTop="@dimen/space_small" >

                <EditText
                    android:id="@+id/et_formerpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginRight="@dimen/space_middle"
                    android:singleLine="true"
                    android:ems="10"
                    android:textSize="@dimen/text_size_normal"
                    android:maxLength="15"
                    android:hint="请输入原密码"
                    android:inputType="textPassword" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_newpassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_formerpassword"
                android:layout_marginTop="@dimen/space_middle"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_small"
                android:paddingTop="@dimen/space_small" >

                <EditText
                    android:id="@+id/et_newpassword1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginRight="@dimen/space_middle"
                    android:singleLine="true"
                    android:ems="10"
                    android:textSize="@dimen/text_size_normal"
                    android:maxLength="15"
                    android:hint="请输入新密码"
                    android:inputType="textPassword" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_newpassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_newpassword1"
                android:layout_marginTop="@dimen/space_micro"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_small"
                android:paddingTop="@dimen/space_small" >

                <EditText
                    android:id="@+id/et_newpassword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginRight="@dimen/space_middle"
                    android:singleLine="true"
                    android:ems="10"
                    android:textSize="@dimen/text_size_normal"
                    android:maxLength="15"
                    android:hint="请再次输入新密码"
                    android:inputType="textPassword" />
            </RelativeLayout>
            
        </RelativeLayout>
        
    </ScrollView>
    
    <Button
        android:id="@+id/bt_modifypassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_middle"
        android:background="@color/green_light"
        android:gravity="center"
        android:text="完成修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />

</RelativeLayout>
