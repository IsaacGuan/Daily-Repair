<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/sv_engineer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_engineersendorder" >

        <RelativeLayout
            android:id="@+id/rl_engineer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/rl_engineername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:paddingBottom="@dimen/space_middle"
                android:paddingLeft="@dimen/space_middle"
                android:paddingRight="@dimen/space_middle"
                android:paddingTop="@dimen/space_middle" >

                <ImageView
                    android:id="@+id/iv_engineerphoto"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/engineer" />

                <TextView
                    android:id="@+id/tv_engineername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_engineerphoto"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_toRightOf="@+id/iv_engineerphoto"
                    android:text="维修工"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_engineerscore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_engineerphoto"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_toRightOf="@+id/iv_engineerphoto"
                    android:text="平均分"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_engineerorders1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_engineerscore1"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_toRightOf="@+id/iv_engineerphoto"
                    android:text="接单数"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_engineerscore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_engineerphoto"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_toRightOf="@+id/tv_engineerscore1"
                    android:text="0%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_engineerorders2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_engineerscore2"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_toRightOf="@+id/tv_engineerorders1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_engineerinform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_engineername"
                android:layout_marginTop="@dimen/space_middle"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_middle"
                android:paddingTop="@dimen/space_middle" >

                <TextView
                    android:id="@+id/tv_engineerexpert1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:text="擅长领域"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_engineerexpert2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_toRightOf="@+id/tv_engineerexpert1"
                    android:text="aaa"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black" />
                
                <TextView
                    android:id="@+id/tv_engineermobile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_engineerexpert1"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="联系方式"
                    android:textSize="@dimen/text_size_normal" />
                
                <TextView
                    android:id="@+id/tv_engineermobile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_engineerexpert1"
                    android:layout_toRightOf="@+id/tv_engineermobile1"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="aaa"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black" />
                
                <TextView
                    android:id="@+id/tv_engineerdistrict1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_engineermobile1"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="服务区域"
                    android:textSize="@dimen/text_size_normal" />
                
                <TextView
                    android:id="@+id/tv_engineerdistrict2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_engineermobile1"
                    android:layout_toRightOf="@+id/tv_engineerdistrict1"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="aaa"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black" />
                
                <TextView
                    android:id="@+id/tv_engineeraddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_engineerdistrict1"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="常住地址"
                    android:textSize="@dimen/text_size_normal" />
                
                <TextView
                    android:id="@+id/tv_engineeraddress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_engineerdistrict1"
                    android:layout_toRightOf="@+id/tv_engineeraddress1"
                    android:layout_marginLeft="@dimen/space_middle"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="aaa"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_engineersendorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/space_middle"
        android:background="@color/green_light"
        android:gravity="center"
        android:text="给TA发活儿"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />

</RelativeLayout>