<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    tools:context="${relativePackage}.${activityClass}" >
    
    <RelativeLayout
        android:id="@+id/rl_personalinfoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_large"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_middle"
        android:paddingTop="@dimen/space_middle" >

        <TextView
            android:id="@+id/tv_personalinfoid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_middle"
            android:text="登陆账号"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_personalinfoid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_middle"
            android:text=""
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_announce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_personalinfoid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_middle"
        android:text="登陆账号不可更改"
        android:textSize="@dimen/text_size_normal" />

    <RelativeLayout
        android:id="@+id/rl_personalinfoname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_announce"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_middle"
        android:paddingBottom="@dimen/space_middle"
        android:paddingTop="@dimen/space_middle" >

        <TextView
            android:id="@+id/tv_personalinfoname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_middle"
            android:text="用户姓名"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_personalinfoname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_middle"
            android:text=""
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personalinfomobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_personalinfoname"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_micro"
        android:paddingBottom="@dimen/space_middle"
        android:paddingTop="@dimen/space_middle" >

        <TextView
            android:id="@+id/tv_personalinfomobile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_middle"
            android:text="用户手机"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_personalinfomobile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_middle"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_modifypassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_personalinfomobile"
        android:layout_marginTop="@dimen/space_large"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_middle"
        android:paddingTop="@dimen/space_middle" >

        <TextView
            android:id="@+id/tv_modifypassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_middle"
            android:text="修改登陆密码"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</RelativeLayout>
